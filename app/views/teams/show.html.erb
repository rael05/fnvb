<p style="color: green"><%= notice %></p>

<div class="container text-center">
  <div class="row">
    <div class="col-3 shadow p-3 me-3 mb-5 bg-body-tertiary rounded">
      <div>
        <p>
          <% if @team.image.present? %>
            <%= image_tag @team.image, class: "card-img-top border" %>
          <% end %>
        </p>

        <p>
          <strong><%= t(:team_name) %>:</strong>
          <%= @team.team_name %>
        </p>

        <p>
          <strong><%= t(:tournaments) %>:</strong>
          <% @team.tournaments.each do |tournament| %>
            <%= link_to tournament.name, tournament %>
          <% end %>
        </p>

        <p>
          <strong>Delegado:</strong>
          <%= @team.delegate_name + " " + @team.delegate_last_name %>
        </p>

        <p>
          <strong>Entrenador :</strong>
          <%= @team.head_coach_name + " " + @team.head_coach_last_name%>
        </p>

        <p>
          <strong>Asistente #1:</strong>
          <%= @team.assistant_coach1_name + " " + @team.assistant_coach1_last_name%>
        </p>

        <p>
          <strong>Asistente #2:</strong>
          <%= @team.assistant_coach2_name + " " + @team.assistant_coach2_last_name%>
        </p>

        <p>
          <strong>Medico :</strong>
          <%= @team.doctor_name + " " + @team.doctor_last_name %>
        </p>

        <p>
          <strong>Fisioterapeuta:</strong>
          <%= @team.physiotherapist_name + " " + @team.physiotherapist_last_name%>
        </p>

        <p>
          <strong>Estadístico:</strong>
          <%= @team.statistical_name + " " + @team.statistical_last_name%>
        </p>

        <p>
          <strong>Árbitro:</strong>
          <%= @team.international_referee_name + " " + @team.international_referee_last_name%>
        </p>

        <p>
          <strong>Uniforme #1:</strong>
          <%= @team.color_shirt1 + " | " + @team.color_short1%>
        </p>

        <p>
          <strong>Uniforme #2:</strong>
          <%= @team.color_shirt2 + " | " + @team.color_short2%>
        </p>

        <p>
          <strong>Uniforme #3:</strong>
          <%= @team.color_shirt3 + " | " + @team.color_short3%>
        </p>

      </div>
      <div class="d-flex justify-content-center">
        <%= link_to "Editar", edit_team_path(@team), class: "btn btn-outline-info me-2" %>
        <%= button_to "Elimiar", @team, method: :delete, class: "btn btn-outline-danger ms-2" %>
      </div>
    </div>
    <div class="col shadow p-3 ms-3 mb-5 bg-body-tertiary rounded">
      <h1 class="mb-3">
        <a href="<%= teams_path %>" style="text-decoration: none">
          <i class="fa-regular fa-circle-left fa-sm"></i>
        </a>

        Jugadores
      </h1>
      <table class="table table-primary table-bordered table-striped">
        <thead>
          <tr>
            <th scope="col">Numero</th>
            <th scope="col">Nombre Completo</th>
            <th scope="col">Posicion</th>
            <th scope="col">Altura</th>
            <th scope="col">Peso</th>
          </tr>
        </thead>
        <tbody>
          <% @team.players.each do |player| %>
            <tr>
              <td><%= player.number %></td>
              <td><%= link_to player.name + " " + player.last_name, player %></td>
              <td><%= player.position_name %></td>
              <td><%= player.height.to_s + " M" %></td>
              <td><%= player.weight.to_s + " KG" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-end">
        <%= link_to "PDF", team_path(@team, format: :pdf), {class: 'btn btn-danger mt-3 ms-2', target: :_blank} %>
        <%= link_to "EXCEL", team_path(@team, format: :xlsx), class: 'btn btn-success mt-3 ms-2' %>
      </div>
    </div>
  </div>
</div>
